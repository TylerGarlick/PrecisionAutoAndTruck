<%= render :partial => 'photo_menu' %>

<div class="row-fluid">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Thumbnail</th>
      <th>Name</th>
      <th>Public</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% for photo in photos %>
      <tr>
        <td>
          <%= image_tag photo.photo_file.url, class: "thumbnail", style: "width: 300px;" %>
        </td>
        <td><%= photo.name %></td>
        <td><%= photo.is_public %></td>
        <td>
          <div class="pull-right">
            <%= link_to "Edit", edit_admin_photo_path(photo), class: "btn" %>
            <%= link_to "Delete", admin_photo_path(photo), :method => :delete, confirm: "Are you sure you want to delete #{photo.name}?", class: "btn btn-danger" %>
          </div>
        </td>
      </tr>

    <% end %>
    </tbody>
  </table>
</div>